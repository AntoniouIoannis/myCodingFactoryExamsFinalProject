@model CultureGR_MVC_ModelFirst.DTO.UserFilterdDTO
@{
    // Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css"
          integrity="sha512-b2QcS5SsA8tZodcDtGRELiGv5SaKSk1vDHDaQRda0htPYWZ6046lr3kJ5bAAQdpV2mmA/4v0wQF9MyU6/pDIAg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" /> *@
    <style>
        .input-group {font-size: 1.25rem; position: relative; --primary: #2196f3;}

        .form-control { padding: 1rem; border: 2px solid skyblue; border-radius: 10px;
            transition: 150ms cubic-bezier(0.4, 0, 0.2, 1); }

        .form-label { position: absolute; top: 1rem; left: 1rem; color: #d4d4d4; pointer-events: none;
            transition: 150ms cubic-bezier(0.4, 0, 0.2, 1); }

        .form-control:focus { border: 1px solid var(--primary); outline: none; }

        .form-control:focus ~ .form-label,
        .form-control:not(:placeholder-shown) ~ .form-label { transform: translateY(-150%) scale(0.9);
            background-color: #fff; padding-inline: 0.3rem; color: var(--primary); }
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="w-50 mt-5 p-3 border border-primary mx-auto rounded-3">
            <form asp-controller="User" asp-action="Login" method="POST">
                <div class="row mb-3">
                    <div class="input-group position-relative">
                        <input type="text" id="username" class="form-control bg-dark text-light" required placeholder=" ">
                        <label for="username" class="form-label">Username</label>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="input-group position-relative">
                        <input type="email" id="email" class="form-control bg-dark text-light" required placeholder=" ">
                        <label for="email" class="form-label">Email</label>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label asp-for="KeepLoggedIn" class="col-md-2 form-check-label text-end">Keep me logged In</label>
                    <div class="col-md-1">
                        <input type="checkbox" class="form-check-input" asp-for="KeepLoggedIn" />
                        <span asp-asp-validation-for="KeepLoggedIn" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="offset-md-2 col-md-3 d-grid">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>
            </form>

            <div class="offset-md-2">
                Don't you already have an account? Sign up <a href="~/User/Signup">here</a>
                
            </div>
        </main>
    </div>

    <div class="mt-5 offset-md-4 text-danger fs-6">
        @ViewData["ValidateMessage"]
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

