@model IEnumerable<CultureGR_MVC_ModelFirst.Data.ArchaeologicalSite>

@{
    ViewData["Title"] = "Αρχαιολογικά Μνημεία";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Περιοχή</th>
            <th>Περιγραφή</th>
            <th>Τοποθεσία</th>
            <th>Ενέργειες</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Region</td>
                <td>@item.Description</td>
                <td>@item.Location</td>
                <td>
                    <a href="@Url.Action("Details", "ArchaeologicalSites", new { id = item.Id })" class="btn btn-info">Προβολή</a>
                </td>
            </tr>
        }
    </tbody>
</table>
